{
  "name": "pubg",
  "version": "9.1.0",
  "license": "MIT",
  "author": "Nir Zigdon",
  "description": "Pubg Mobile group of friends, project built using Angular 2+, Express, Mongoose and Node.",
  "engines": {
    "node": "12.16.1",
    "npm": "6.13.4"
  },
  "scripts": {
    "build": "ng build",
    "build:deploy": "ng build && firebase deploy",
    "start": "node dist/server/app.js",
    "dev": "concurrently \"mongod\" \"ng serve --host 0.0.0.0 --proxy-config proxy.conf.json --open\" \"tsc -w -p server\" \"nodemon dist/server/app.js\"",
    "prod": "concurrently \"mongod\" \"ng build --aot --prod && tsc -p server && node dist/server/app.js\"",
    "test": "ng test",
    "testbe": "tsc -p server && mocha dist/server/test --exit",
    "lint": "ng lint",
    "precommit": "ng lint --fix && pretty-quick --staged",
    "lintbe": "tslint server/**/**.ts{,x}",
    "e2e": "ng e2e",
    "icons": "node webfontGenerator.js && webpack -w"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run precommit"
    }
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^9.1.9",
    "@angular/cdk": "^9.2.4",
    "@angular/common": "~9.1.9",
    "@angular/compiler": "~9.1.9",
    "@angular/core": "~9.1.9",
    "@angular/forms": "~9.1.9",
    "@angular/platform-browser": "~9.1.9",
    "@angular/platform-browser-dynamic": "~9.1.9",
    "@angular/router": "~9.1.9",
    "@auth0/angular-jwt": "^4.0.0",
    "@fullcalendar/core": "^4.4.2",
    "@webdev-tools/tslint-airbnb-styleguide": "^1.3.0",
    "bcryptjs": "^2.4.3",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "chart.js": "^2.9.3",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "husky": "^4.2.5",
    "jsonwebtoken": "^8.5.1",
    "mocha": "^7.2.0",
    "mongoose": "^5.9.15",
    "morgan": "^1.10.0",
    "primeicons": "^3.0.0-rc.1",
    "primeng": "^9.0.6",
    "quill": "^1.3.7",
    "rxjs": "~6.5.4",
    "rxjs-compat": "~6.5.4",
    "tslib": "^2.0.0",
    "webpack-spritesmith": "^1.0.1",
    "zone.js": "~0.10.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.901.0",
    "@angular/cli": "^9.1.7",
    "@angular/compiler-cli": "~9.1.9",
    "@angular/language-service": "~9.1.9",
    "@types/chai-http": "^4.2.0",
    "@types/express": "^4.17.2",
    "@types/jasmine": "^3.5.10",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "^14.0.5",
    "codelyzer": "^5.1.2",
    "concurrently": "^5.1.0",
    "jasmine-core": "~3.5.0",
    "jasmine-spec-reporter": "~5.0.2",
    "karma": "~5.0.9",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~3.0.2",
    "karma-jasmine": "~3.1.1",
    "karma-jasmine-html-reporter": "^1.4.2",
    "mocha": "^7.2.0",
    "nodemon": "^2.0.2",
    "prettier": "2.0.5",
    "pretty-quick": "^2.0.1",
    "protractor": "^7.0.0",
    "ts-node": "~8.10.1",
    "tslint": "^6.1.2",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "3.8.3",
    "webfonts-generator": "^0.4.0",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.7"
  }
}
