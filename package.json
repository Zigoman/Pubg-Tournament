{
  "name": "pubg-mobile-tournament",
  "version": "0.1.0",
  "author": "Nir Zigdon",
  "description": "Pubg Mobile group of friends, project built using Angular 10, Express, Mongoose and Node.",
  "scripts": {
    "start": "npm run start -w back",
    "devfront": "npm run devfront -w front",
    "serverbuild": "npm run serverbuild -w back",
    "devfrontmock": "npm run devfrontmock -w front",
    "mock": "npm run mock -w back",
    "build": "npm run build -w front",
    "test": "npm run test --workspaces",
    "lint": "npm run lint -w front",
    "e2e": "npm run e2e -w front",
    "precommit": "npm run lintfix -w front && pretty-quick --staged",
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable"
  },
  "private": true,
  "devDependencies": {
    "husky": "^7.0.2"
  },
  "workspaces": [
    "front",
    "back"
  ]
}
